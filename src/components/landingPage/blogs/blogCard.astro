---
export interface Props {
  title: string;
  text: string;
  href: string;
}

const { text, title, href } = Astro.props;
---

<a
  href={href}
  rel="noopener noreferrer"
  class="w-full cursor-pointer rounded-lg border border-gris-200/20 bg-gris-200/10 transition-colors hover:border-gris-300/50 hover:bg-gris-200/20 hover:no-underline sm:h-64"
>
  <div
    class="flex h-full flex-col items-center justify-center space-y-3 p-4 sm:p-2 md:p-4"
  >
    <h2 class="text-2xl font-black">{title}</h2>
    <p class="text-center">
      {text}
    </p>
  </div>
</a>
